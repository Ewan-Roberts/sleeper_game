{
  "name": "mmo",
  "version": "1.1.8",
  "description": "Pixi.js web game",
  "scripts": {
    "watch": "watchify web/index.js -o ./public/js/bundle.js --delay 500",
    "build": "uglifyjs ./public/js/bundle.js --output ./public/js/bundle.js --compress --mangle",
    "start": "nodemon server --delay 1",
    "rinse": "./scripts/clean_trim_sprite.sh",
    "spritesheet": "pixi-packer  ./scripts/image_compression.js public/images/ --clean-cache",
    "test": "mocha"
  },
  "eslint.options": {
    "configFile": "./.eslintrc.json"
  },
  "author": "Ewan Roberts",
  "license": "ISC",
  "dependencies": {
    "browserfy": "^1.0.0",
    "chai": "^4.2.0",
    "compression": "^1.7.3",
    "easystarjs": "^0.4.3",
    "express": "^4.16.3",
    "glslify": "^7.0.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^6.0.0",
    "jimp": "^0.6.1",
    "mocha": "^6.1.4",
    "pixi-keyboard": "^0.9.4",
    "pixi-packer-parser": "^2.0.0",
    "pixi-sound": "^2.1.0",
    "pixi-tween": "^0.2.0",
    "pixi.js": "^4.8.5",
    "png-js": "^0.1.1",
    "worker-timers": "^5.0.17"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp": "^4.0.0"
  }
}
